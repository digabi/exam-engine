                    <e:text-answer type="rich-text" max-score="6"/>
                    <e:audio src="1.2.ogg" times="1">
                        <e:audio-title>Hören Sie den Abschnitt für die Frage 1.2.</e:audio-title>
                    </e:audio>
                </e:question>
            </e:audio-group>
